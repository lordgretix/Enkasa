<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/mainActivity">
    <fragment
        android:id="@+id/mainActivity"
        android:name="com.gp3.enkasa.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main">
        <action
            android:id="@+id/action_mainActivity_to_loginActivity4"
            app:destination="@id/loginActivity" />
    </fragment>
    <fragment
        android:id="@+id/loginActivity"
        android:name="com.gp3.enkasa.Activities.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" >
        <action
            android:id="@+id/action_loginActivity_to_registrarseActivity"
            app:destination="@id/registrarseActivity" />
        <action
            android:id="@+id/action_loginActivity_to_pagPrincipalActivity"
            app:destination="@id/pagPrincipalActivity" />
    </fragment>
    <fragment
        android:id="@+id/pagPrincipalActivity"
        android:name="com.gp3.enkasa.Activities.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_pag_principal" />
    <fragment
        android:id="@+id/registrarseActivity"
        android:name="com.gp3.enkasa.Activities.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_registrarse" >
        <action
            android:id="@+id/action_registrarseActivity_to_pagPrincipalActivity"
            app:destination="@id/pagPrincipalActivity" />
    </fragment>
</navigation>